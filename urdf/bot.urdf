<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="bot">
  <xacro:arg name="prefix" default="" />

  <!-- Links -->
  <link name="world"/>
  <link name="link1">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.50"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>
  <link name="link2">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.50"/>
      </geometry>
      <material name="Red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>
  <link name="link3">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.50"/>
      </geometry>
      <material name="Blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Joints -->
  <joint name="base" type="fixed">
    <parent link="world"/>
    <child link="link1"/>
  </joint>
  <joint name="joint1" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.0 0.0 0.5"/>
    <axis xyz="1.0 0.0 0.0"/>
    <limit lower="-1.0" upper="1.0" effort="10.0" velocity="10.0"/>
  </joint>
  <joint name="joint2" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.0 0.0 0.5"/>
    <axis xyz="1.0 0.0 0.0"/>
    <limit lower="-1.0" upper="1.0" effort="10.0" velocity="10.0"/>
  </joint>

  <!-- Fix world by using the gazebo static tag -->
  <gazebo reference="world">
    <static>true</static>
  </gazebo>

  <!-- Gazebo Plugins -->
  <gazebo>
    <!-- Joint Position Controller for joint1 -->
    <plugin
      filename="libignition-gazebo-joint-position-controller-system"
      name="ignition::gazebo::systems::JointPositionController">
      <joint_name>joint1</joint_name>
      <p_gain>10</p_gain>
      <i_gain>1</i_gain>
      <d_gain>1</d_gain>
    </plugin>
    <!-- Joint Position Controller for joint2 -->
    <plugin
      filename="libignition-gazebo-joint-position-controller-system"
      name="ignition::gazebo::systems::JointPositionController">
      <joint_name>joint2</joint_name>
      <p_gain>10</p_gain>
      <i_gain>1</i_gain>
      <d_gain>1</d_gain>
    </plugin>
    <!-- Joint Controller for joint1 -->
    <!-- <plugin
      filename="libignition-gazebo-joint-controller-system"
      name="ignition::gazebo::systems::JointController">
      <joint_name>joint1</joint_name>
      <p_gain>10</p_gain>
      <i_gain>1</i_gain>
      <d_gain>1</d_gain>
    </plugin> -->
    <!-- Joint Controller for joint2 -->
    <!-- <plugin
      filename="libignition-gazebo-joint-controller-system"
      name="ignition::gazebo::systems::JointController">
      <joint_name>joint2</joint_name>
      <p_gain>10</p_gain>
      <i_gain>1</i_gain>
      <d_gain>1</d_gain>
    </plugin> -->
    <!-- Joint State Publisher -->
    <plugin
        filename="libignition-gazebo-joint-state-publisher-system.so"
        name="ignition::gazebo::systems::JointStatePublisher">
      <topic>joint_states</topic>
      <joint_name>joint1</joint_name>
      <joint_name>joint2</joint_name>
    </plugin>
  </gazebo>

  <!-- ROS2 Control -->
  <ros2_control name="Bot" type="system">
    <hardware>
      <plugin>gz_control_hw/GzHw</plugin>
      <param name="robot_name">bot</param>
      <param name="joint_states_ign_topic">joint_states</param>
    </hardware>
    <joint name="joint1">
      <command_interface name="position"/>
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="joint2">
      <command_interface name="position"/>
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>
</robot>
