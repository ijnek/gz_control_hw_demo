<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="bot">
  <xacro:arg name="prefix" default="" />

  <!-- Links -->
  <link name="link1">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.50"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>
  <link name="link2">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.50"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Joints -->
  <joint name="joint1" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.0 0.0 0.5"/>
    <axis xyz="1.0 0.0 0.0"/>
    <limit lower="-1.0" upper="1.0" effort="10.0" velocity="10.0"/>
  </joint>

  <!-- Gazebo Plugins -->
  <gazebo>
    <plugin
      filename="libignition-gazebo-joint-position-controller-system"
      name="ignition::gazebo::systems::JointPositionController">
      <topic>joint_positions/joint1</topic>
      <joint_name>joint1</joint_name>
      <p_gain>10</p_gain>
      <i_gain>1</i_gain>
      <d_gain>1</d_gain>
    </plugin>
  </gazebo>

  <!-- ROS2 Control -->
  <ros2_control name="Quasor" type="system">
    <hardware>
      <plugin>gz_control_hw/GzHw</plugin>
    </hardware>
    <joint name="joint1">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>
</robot>
